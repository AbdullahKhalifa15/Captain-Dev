@using Hope.Web.Areas.Identity.Pages.Account;

@inject SignInManager<ApplicationUser> _signInManager
<!DOCTYPE html>
<html lang="en" id="top">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- font-awesome css file -->
    <link rel="stylesheet" href="~/themes/css Files/all.min.css" />
    <!-- bootstrap css file -->
    <link rel="stylesheet" href="~/themes/css Files/bootstrap.min.css" />
    <!-- swiper css files -->
    <link rel="stylesheet" href="~/themes/css Files/swiper-bundle.min.css" /> 
    <link href="~/themes/css files/global.css" rel="stylesheet" />
    @await RenderSectionAsync("Style", required: false)
    <!-- font open-sans files -->
    <!-- font-family: 'Open Sans', sans-serif; -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <!-- font Yesteryear files -->
    <!-- font-family: 'Yesteryear', cursive; -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Yesteryear&display=swap"
      rel="stylesheet"
    />
    <!-- fav icon -->
    <link
      rel="shortcut icon"
      href="~/themes/Data/Images/fav-icon.png"
      type="image/x-icon"
    />
    <!-- page title -->
     <title>@ViewData["Title"] - Hope</title>
  </head>

   <body>
    <header id="navbar_top">
        <div class="container">
            <div class="logo">
                <a href="#top">
                  @*  <h1 id="logoText">hope</h1>*@
                    <!-- <img src="~/Themes/Data/un-used-Images/logo-1.png" alt="logo-image" /> -->
                    <!-- <img src="~/Themes/Data/un-used-Images/logo-2.png" alt="logo-image" /> -->
                    <img src="~/Themes/Data/Images/hope logo copy.png" alt="logo">
                </a>
            </div>
            <nav id="nav">
               
              <ul id="links">
                    <li >
                        <a asp-action="Index" asp-controller="Home" >
                            <i class="f-icon fa-solid fa-house"></i>
                            <span>home</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Doctor" asp-action="Index">
                            <i class="f-icon fa-solid fa-user-doctor"></i>
                            <span>doctors</span>
                        </a>
                    </li>
                    <li >
                        <a asp-action="index" asp-controller="medicine">
                            <i class="f-icon fa-solid fa-pills"></i>
                            <span>medicines</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Hospitals" asp-action="Index" >
                            <i class="f-icon fa-solid fa-hospital"></i>
                            <span>hospitals</span>
                        </a>
                    </li>
                    <li >
                        <a asp-controller="Pharmacies" asp-action="Index" >
                            <i class="f-icon fa-solid fa-house-medical"></i>
                            <span>pharmacies</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Blogs" asp-action="Index" >
                            <i class="f-icon fa-solid fa-book-open-reader"></i>
                            <span>blog</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- Start Not Logging In View -->
            <!-- <div class="account">
              <a class="log-in" href="~/Themes/HTML Files/log_in.html">log in</a>
              <a class="regist" href="~/Themes/HTML Files/register.html">register</a>
            </div> -->
            <!-- End Not Logging In View -->
            <!-- Start Logging In View -->
            <div class="log-in-acc">
                @if (User.IsInRole("User"))
                {
                    <article class="cart">

                        <div class="h-btn">
                            <a asp-action="cart" asp-controller="Home" data-number="3">
                                <i class="f-icon fa-solid fa-cart-shopping"></i>
                            </a>
                        </div>
                    </article>
                }
                @if (User.IsInRole("Pharmacy"))
                {
                    <article class="notification">
                        <div class="h-btn">
                            <a asp-action="index" asp-controller="Notification" data-number="4">
                                <i class="f-icon fa-solid fa-bell"></i>
                            </a>
                        </div>
                    </article>
                    
                }
            
                <article class="theme">
                    <div class="h-btn">
                         <i class="f-icon fa-solid fa-circle-half-stroke"></i>
                        <!-- <i class="f-icon light fa-solid fa-sun"></i> -->
                        <!-- <i class="f-icon dark fa-solid fa-moon"></i>-->
                        <ion-icon class="f-icon light"
                                  name="sunny"
                                  size="large"></ion-icon>
                        <ion-icon class="f-icon dark" name="moon" size="large"></ion-icon>
                    </div>
                    <div class="menu"></div>
                </article>
                <article class="acc">
                    <div class="h-btn">
                        <img src="~/Themes/Data/Images/avatar-image-1.png" alt="account-image" />
                    </div>
                    <div class="menu">
                        <ul>
  
                            @if(User.IsInRole("Admin")||User.IsInRole("User"))
                            {
                                <li id="view-profile">
                                    <a asp-controller="Profile" asp-action="Index">
                                        <i class="f-icon fa-solid fa-user"></i>
                                        view profile
                                    </a>
                                </li>
                            }
                            else
                            {
                              <li id="view-Phar-profile">
                                <a asp-controller="PharmacyAction" asp-action="Index">
                                    <i class="f-icon fa-solid fa-user"></i>
                                        view profile
                                </a>
                              </li>
                            }  
                            @if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <a asp-controller="Dashboard" asp-action="Index">
                                        <i class="f-icon fa-solid fa-chart-column"></i>
                                        dashboard
                                    </a>
                                </li>
                            }


                            <li id="log-out-btn">
                                <a class="danger" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <i class="f-icon fa-solid fa-arrow-right-from-bracket"></i>
                                    log out
                                </a>            
                            </li>
                        </ul>
                    </div>
                </article>
            </div>
            <!-- End Logging In View -->
        </div>
    </header>
  
      
        <main id="main_page">

            @RenderBody()
            <!-- Start Top Button -->
                <div class="top" id="up">
                  <a href="#">
                    <i class="f-icon fa-solid fa-angle-up"></i>
                  </a>
                </div>
        </main>
        <!-- End Main -->

        <!-- Start Footer -->
        <footer>
