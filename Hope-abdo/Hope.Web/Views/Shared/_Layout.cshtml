    <!-- swiper script -->
    <script src="~/themes/js Files/swiper-bundle.min.js"></script>
    <!-- header script -->
    <script src="~/themes/js Files/header.js"></script>
    @await RenderSectionAsync("Script", required: false)
    @await RenderSectionAsync("Scripts", required: false)
    
  </body>
  </html>
 