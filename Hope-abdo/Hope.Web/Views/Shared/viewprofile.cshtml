@inject SignInManager<ApplicationUser> _signInManager;
@{
    Layout = "_Layout";
}
@section Style{
    <!-- main css file -->
    <link rel="stylesheet" href="~/themes/css Files/view_profile_global.css" />
}
<div class="container">
    <!-- Start Aside -->
    <aside>
        <ul>
            <li>
                <a asp-action="index" asp-controller="profile">
                    <i class="f-icon fa-solid fa-user"></i>
                    <span>personal info</span>
                </a>
            </li>
            @if (User.IsInRole("User"))
            {
                <li>
                <a asp-action="order" asp-controller="useraction">
                    <i class="f-icon fa-solid fa-cart-shopping"></i>
                    <span>orders</span>
                </a>
            </li>
            }
            <li>
                <a asp-action="liked" asp-controller="useraction">
                    <i class="f-icon fa-solid fa-thumbs-up"></i>
                    <span>liked articles</span>
                </a>
            </li>
            <li>
                <a asp-action="savedartical" asp-controller="useraction">
                    <i class="f-icon fa-solid fa-bookmark"></i>
                    <span>saved articles</span>
                </a>
            </li>
            <li>
                <a class="danger"  asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <i class="f-icon fa-solid fa-arrow-right-from-bracket"></i>
                    <!-- <i class="f-icon fa-solid fa-right-from-bracket"></i> -->
                    <span>log out</span>
                </a>
            </li>
        </ul>
    </aside>
    <!-- End Aside -->
   

        @RenderBody()
     
    
</div>
@await RenderSectionAsync("Style", required: false)
@await RenderSectionAsync("Script", required: false)