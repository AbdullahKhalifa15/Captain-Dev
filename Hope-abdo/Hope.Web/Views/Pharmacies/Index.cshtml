                <article class="box">
                    <div class="avatar">
                        <img src="~/Themes/Data/Images/pharmacy-image.jpg"
                         alt="pharmacy-image" />
                    </div>
                    <div class="data">
                        <section class="head">
                            <a asp-action="details" asp-controller="pharmacies" asp-route-id="@item.Id" > @item.Name</a>
                            <span></span>
                            <p>

                            </p>
                        </section>
                        <section class="info">
                            <div class="field">
                                <div class="icon">
                                    <i class="f-icon fa-solid fa-location-dot"></i>
                                </div>
                                <span>@item.Address</span>
                            </div>
                            <div class="field">
                                <div class="icon">
                                    <i class="f-icon fa-solid fa-phone"></i>
                                </div>
                                <span>@item.MobileNumber</span>
                            </div>
                            <div class="field">
                                <div class="icon">
                                    <i class="f-icon fa-solid fa-envelope"></i>
                                </div>
                                <span class="mail">@item.Email</span>
                            </div>
                        </section>
                        <section class="contact">
                            <div>
                                <a href="https://www.facebook.com/">
