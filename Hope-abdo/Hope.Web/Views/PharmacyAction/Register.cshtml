@model PharmacyRegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- font-awesome css file -->
    <link rel="stylesheet" href="~/Themes/CSS Files/all.min.css" />
    <!-- main css file -->
    <link rel="stylesheet" href="~/Themes/CSS Files/register.css" />
    <!-- font open-sans files -->
    <!-- font-family: 'Open Sans', sans-serif; -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap"
          rel="stylesheet" />
    <!-- font Yesteryear files -->
    <!-- font-family: 'Yesteryear', cursive; -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Yesteryear&display=swap"
          rel="stylesheet" />
    <!-- fav icon -->
    <link rel="shortcut icon"
          href="~/Themes/Data/Images/fav-icon.png"
          type="image/x-icon" />
    <!-- page title -->
    <title>Register</title>
</head>
<body>
    <!-- Start Header -->
    <header id="navbar_top">
        <div class="container">
            <div class="logo">
                <a href="#top">
                    <h1 id="logoText">hope</h1>
                    <!-- <img src="./Data/Images/logo.png" alt="logo-image" /> -->
                </a>
            </div>
            <nav id="nav">
                <ul id="links">
                    <li class="link">
                        <a href="#top">
                            <i class="f-icon fa-solid fa-house"></i>
                            <span>home</span>
                        </a>
                    </li>
                    <li class="link">
                        <a href="./doctors.html">
                            <i class="f-icon fa-solid fa-user-doctor"></i>
                            <span>doctors</span>
                        </a>
                    </li>
                    <li class="link">
                        <a href="#medicine">
                            <i class="f-icon fa-solid fa-pills"></i>
                            <span>medicines</span>
                        </a>
                    </li>
                    <li class="link">
                        <a href="#hospitals">
                            <i class="f-icon fa-solid fa-hospital"></i>
                            <span>hospitals</span>
                        </a>
                    </li>
                    <li class="link">
                        <a href="#blog">
                            <i class="f-icon fa-solid fa-book-open-reader"></i>
                            <span>blog</span>
                        </a>
                    </li>
                    <li class="link">
                        <a href="#charities">
                            <i class="f-icon fa-solid fa-hand-holding-heart"></i>
                            <span>charities</span>
                        </a>
                    </li>
                    <li class="link">
                        <a href="#contacts">
                            <!-- <i class="f-icon fa-solid fa-phone"></i> -->
                            <!-- <i class="f-icon fa-solid fa-headset"></i> -->
                            <i class="f-icon fa-solid fa-comments"></i>
                            <span>contacts</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- Start Not Logging In View -->
            <!-- <div class="account">
              <a class="log-in" href="./log_in.html">log in</a>
              <a class="regist" href="./register.html">register</a>
            </div> -->
            <!-- End Not Logging In View -->
            <!-- Start Logging In View -->
            <div class="log-in-acc">
                <article class="lang">
                    <div class="h-btn">
                        <div>
                            <img src="~/Themes/Data/Images/usa.png" alt="lang-flag-image" />
                        </div>
                        <span>en</span>
                    </div>
                    <div class="menu">
                        <ul>
                            <li img-src="~/Themes/Data/Images/usa.png" lang-text="en">
                                <div>
                                    <img src="~/Themes/Data/Images/usa.png" alt="lang-flag-image" />
                                </div>
                                <span>en</span>
                            </li>
                            <li img-src="~/Themes/Data/Images/eg.png" lang-text="ar">
                                <div>
                                    <img src="~/Themes/Data/Images/eg.png" alt="lang-flag-image" />
                                </div>
                                <span>ar</span>
                            </li>
                        </ul>
                    </div>
                </article>
                <article class="theme">
                    <div class="h-btn">
                        <i class="f-icon fa-solid fa-circle-half-stroke"></i>
                        <!-- <i class="f-icon fa-solid fa-sun"></i> -->
                        <!-- <i class="f-icon fa-solid fa-moon"></i> -->
                    </div>
                    <div class="menu"></div>
                </article>
                <article class="acc">
                    <div class="h-btn">
                        <img src="~/Themes/Data/Images/avatar-image-1.png"
                             alt="account-image" />
                    </div>
                    <div class="menu">
                        <ul>
                            <li id="view-profile">
                                <a href="./view_profile.html">view profile</a>
                            </li>
                            <li id="log-out-btn">
                                <span>log out</span>
                            </li>
                        </ul>
                    </div>
                </article>
            </div>
            <!-- End Logging In View -->
        </div>
    </header>
    <!-- End Header -->
    <main>
        <div class="container">
            <div class="card">
                <div class="left">
                    <button class="back-btn" id="cancel">
                        <i class="f-icon fa-solid fa-arrow-left"></i>
                        <!-- <i class="fa-solid fa-left-long"></i> -->
                        <!-- <i class="fa-solid fa-chevron-left"></i> -->
                    </button>
                    <div class="head">
                        <h2>register</h2>
                        <p>
                            please enter your details to sign up and to be part of our great
                            community
                        </p>
                    </div>
                    <div class="select-btns">
                        <a asp-area="Identity" asp-page ="/Account/Register">
                            <i class="f-icon fa-solid fa-user"></i>
                            <span>user</span>
                        </a>
                        <a class="active">
                            <i class="f-icon fa-solid fa-hospital"></i>
                            <span>pharmacy</span>
                        </a>
                    </div>
                    <div class="form">

                        <form class="pharmacyReg active" method="post">
                        <section class="name">
                        <label for="field">pharmacy name:</label>
                        <div class="field">
                        <input class="input" style="text-transform:initial"
                        type="text"
                        asp-for="PharmacyName" />
                        <span></span>
                        <span asp-validation-for="PharmacyName" class="text-danger" ></span>
                        <i class="f-icon fa-solid fa-user"></i>
                        </div>
                        </section>
                        <section class="e-mail">
                        <label for="field">e-mail:</label>
                        <div class="field">
                        <input class="input"
                        asp-for="Email" />
                        <span></span>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <i class="f-icon fa-regular fa-envelope"></i>
                        </div>
                        </section>
                        <section class="password">
                        <label for="field">password:</label>
                        <div class="field">
                        <input class="input"
                         asp-for="Password" />
                        <span></span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <i class="f-icon fa-solid fa-lock"></i>
                        </div>
                        </section>
                        <section class="password">
                        <label for="field">confirm password:</label>
                        <div class="field">
                        <input class="input"
                        asp-for="ConfirmPassword" />
                        <span></span>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <i class="f-icon fa-solid fa-lock"></i>
                        </div>
                        </section>
                        <section class="check-box">
                        <input type="checkbox" name="agree" id="pharmacyTerms" />
                        <label for="pharmacyTerms">
                        i agree with all
                        <a href="#">terms of use</a>
                        and
                        <a href="#">our privacy policy</a>
                        </label>
                        <span class="error">error message here</span>
                        </section>
                        <div class="buttons">
                        <input type="submit" value="Confirm"/>
                        <input type="reset" value="clear form" />
                        </div>
                        </form>
                    </div>
                    <div class="log-link">
                        <span>already have account?</span>
                        <a href="./log_in.html" id="logIn"> log in </a>
                    </div>
                </div>
                <div class="right">
                    <div class="text">
                        <h1>register</h1>
                        <p>
                            please enter your details to sign up and to be part of our great
                            community
                        </p>
                        <h2>hope</h2>
                        <h3>already have account?</h3>
                        <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"> log in </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- bootstrap js file -->
    <script src="~/Themes/JS Files/bootstrap.bundle.js"></script>
    <!-- ion-icons js files -->
    <script type="module"
            src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule
            src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <!-- main script file -->
    <script src="~/Themes/JS Files/test.js"></script>
    <script src="~/Themes/JS Files/register.js"></script>
    <!-- header script -->
    <!-- <script src="./JS Files/header.js"></script> -->
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
