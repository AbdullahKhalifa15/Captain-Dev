@model ProfileUpdateViewModel
@{
    
}
@section Style{
    <link rel="stylesheet" href="~/Themes/CSS Files/edit_profile (1).css" />
}
<section class="head">
    <h1>edit profile</h1>
</section>
<section class="content">
    <div class="container">
        <button class="back-btn" id="cancel">
            <i class="f-icon fa-solid fa-arrow-left"></i>
            <!-- <i class="fa-solid fa-left-long"></i> -->
            <!-- <i class="fa-solid fa-chevron-left"></i> -->
        </button>
        <form method="post">
            <div class="top-sec">
                <div class="left">
                    <!-- Start user image upload and preview -->
                    <div class="avatar-upload">
                        <div class="avatar-edit">
                            <input type="file"
                                   id="imageUpload"
                                   accept=".png, .jpg, .jpeg" />
                            <label for="imageUpload"></label>
                        </div>
                        <div class="avatar-preview">
                            <div>
                                <img id="imagePreview"
                                     src="~/Themes/Data/Images/pharmacy-image.jpg"
                                     alt="pharmacy-profile-image" />
                            </div>
                        </div>
                    </div>
                    <!-- End user image upload and preview -->
                    <div class="text">
                        <h2>account name</h2>
                        <span>@ViewBag.username</span>
                    </div>
                </div>
                <div class="right">
                    <section class="name">
                        <label for="field">pharmacy name:</label>
                        <div class="field">
                            <input class="input" asp-for="PharmacyName" />
                            <span asp-validation-for="PharmacyName" class="text-danger"></span>
                            <i class="f-icon fa-solid fa-user"></i>
                        </div>
                    </section>
                    <section class="e-mail">
                        <label for="field">e-mail:</label>
                        <div class="field">
                            <input class="input" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <i class="f-icon fa-regular fa-envelope"></i>
                        </div>
                    </section>
                    <section class="password">
                        <label for="field">old password:</label>
                        <div class="field">
                            <input class="input"
                                   asp-for="OldPassword" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                            <i class="f-icon fa-solid fa-lock"></i>
                        </div>
                    </section>
                    <section class="password">
                        <label for="field">new password:</label>
                        <div class="field">
                            <input class="input"
                                   asp-for="NewPassword" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <i class="f-icon fa-solid fa-lock"></i>
                        </div>
                    </section>
                    <section class="password">
                        <label for="field">confirm new password:</label>
                        <div class="field">
                            <input class="input"
                                   asp-for="ConfirmNewPassword" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                            <i class="f-icon fa-solid fa-lock"></i>
                        </div>
                    </section>
                    <section class="phone">
                        <label for="field">phone number:</label>
                        <div class="field">
                            <input class="input"
                                   asp-for="phoneNumber" />
                            <span asp-validation-for="phoneNumber" class="text-danger"></span>
                            <i class="f-icon fa-solid fa-phone"></i>
                        </div>
                    </section>
                    <section class="location">
                        <label for="field">location:</label>
                        <div class="field">
                            <input class="input"
                                  asp-for="Address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                            <i class="f-icon fa-solid fa-location-dot"></i>
                        </div>
                    </section>
                    <div class="social-links">
                        <h2>social links</h2>
                        <div class="links">
                            <section class="link-div">
                                <div class="field">
                                    <input type="text"
                                           name="facebook-link"
                                           placeholder="facebook link" />
                                    <span></span>
                                </div>
                            </section>
                            <section class="link-div">
                                <div class="field">
                                    <input type="text"
                                           name="instagram-link"
                                           placeholder="instagram link" />
                                    <span></span>
                                </div>
                            </section>
                            <section class="link-div">
                                <div class="field">
                                    <input type="text"
                                           name="twitter-link"
                                           placeholder="twitter link" />
                                    <span></span>
                                </div>
                            </section>
                            <section class="link-div">
                                <div class="field">
                                    <input type="text"
                                           name="mail-address"
                                           placeholder="mail address" />
                                    <span></span>
                                </div>
                            </section>
                            <section class="link-div">
                                <div class="field">
                                    <input type="text"
                                           name="whatsapp-number"
                                           placeholder="whatsapp number" />
                                    <span></span>
                                </div>
                            </section>
                            <section class="link-div">
                                <div class="field">
                                    <input type="text"
                                           name="phone-number"
                                           placeholder="phone number" />
                                    <span></span>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
            <div class="button">
                <input type="submit" value="Confirm" />
            </div>
        </form>
    </div>
</section>
<script src="~/Themes/JS Files/edit_profile.js"></script>