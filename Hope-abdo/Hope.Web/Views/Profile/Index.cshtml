@model ApplicationUser
@inject SignInManager<ApplicationUser> _signinmanager
@{
    Layout = "viewprofile";
}
@section Style{
    <!-- main css file -->
    <link rel="stylesheet" href="~/themes/css Files/view_profile (1).css" />
}


<section class="content">
    <div class="top-sec">
        <div class="image">
            <img src="~/Themes/Data/Images/avatar-image-1.png"
                 alt="profile-image" />
        </div>
        <div class="text">
            <h2>Account name</h2>
            <span>@Model.UserName</span>
        </div>
        <div class="edit-btn">
            <a asp-action="edit" asp-controller="profile">
                <i class="f-icon fa-solid fa-pen"></i>
                <span>edit profile</span>
            </a>
        </div>
    </div>
    <div class="bottom-sec">
        <!-- start box -->
        <article class="box">
            <label for="field">full name:</label>
            <div class="field" id="field">
                <span>@Model.FirstName</span>
                <span>@Model.LastName</span>
            </div>
        </article>
        <!-- end box -->
        <!-- start box -->
        <article class="box">
            <label for="field">date of birth:</label>
            <div class="field" id="field">
                <span>3</span> / <span>10</span> / <span>2000</span>
            </div>
        </article>
        <!-- end box -->
        <!-- start box -->
        <article class="box">
            <label for="field">e-mail:</label>
            <div class="field" id="field">
                <span>@Model.Email</span>
            </div>
        </article>
        <!-- end box -->
        <!-- start box -->
        <article class="box">
            <div class="field">
                <div class="left-sec">
                    <label for="field">gender:</label>
                    <div class="field" id="field">
                        <span>@Model.Gender</span>
                    </div>
                </div>
                <div class="right-sec">
                    <label for="field">age:</label>
                    <div class="field" id="field">
                        <span>20</span>
                    </div>
                </div>
            </div>
        </article>
        <!-- end box -->
        <!-- start box -->
        <article class="box">
            <label for="field">phone</label>
            <div class="field" id="field">
                <span>@Model.PhoneNumber</span>
            </div>
        </article>
        <!-- end box -->
        <!-- start box -->
        @if (User.IsInRole("User"))
        {
            <article class="box">
                <label for="field">cancer type:</label>
                <div class="field" id="field">
                    <span>@Model.TypeOfCancer</span>
                </div>
            </article>
        }
        <!-- end box -->
        <!-- start box -->
        <article class="box">
            <label for="field">address:</label>
            <div class="field" id="field">
                <span>street name - city - country</span>
            </div>
        </article>
        <!-- end box -->
    </div>
</section>