@model HospitalViewModel
@{   ViewData["Title"] = "Modify Hospital";
    Layout = "_Layout";
}
@section  Style{
    <link rel="stylesheet" href="~/Admin/Css_files/modify_hospital.css" />
}

<section class="content">
    <div class="container">
        <div class="sec-head">
            <h1>modify hospital</h1>
            <button class="back-btn" id="cancel">
                <i class="f-icon fa-solid fa-arrow-left"></i>

            </button>

        </div>
        <div class="sec-body">
            <form id="form" method="post" id="my-form">
                <div class="sec-flex">
                    <section class="info">
                        <h2>doctor information</h2>
                        <div id="title-div">
                            <input asp-for="Name" placeholder="name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div id="link-div">
                            <input asp-for="Address" placeholder="location" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div id="link-div">
                            <input asp-for="Email" placeholder="e-mail address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div id="link-div">
                            <input type="text" asp-for="MobileNumber" placeholder="phone number" />
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>
                    </section>
                    <section class="image">
                        <h2>hospital image</h2>
                        <!-- Start user image upload and preview -->
                        <section class="avatar-upload">
                            <div class="avatar-edit">
                                <input type="file"
                                       id="imageUpload"
                                       accept=".png, .jpg, .jpeg" />
                                <label for="imageUpload"></label>
                            </div>
                            <div class="avatar-preview">
                                <div>
                                    <img id="imagePreview"
                                         src="~/Themes/Data/Images/IMG_20221204_221443_587.jpg"
                                         alt="profile-image" />
                                </div>
                            </div>
                        </section>
                        <!-- End user image upload and preview -->
                    </section>
                </div>
                <div id="body-div">
                    <h2>addition information</h2>
                    <textarea asp-for="MoreInformation" placeholder="more information about hospital"></textarea>
                    <span asp-validation-for="MoreInformation" class="text-danger"></span>
                </div>
                <div class="social" id="social-div">
                    <h2>social media links</h2>
                    <div class="inputs">
                        <div id="link-div">
                            <input asp-for="FB_Link" placeholder="facebook link" />
                            <span asp-validation-for="FB_Link" class="text-danger"></span>
                        </div>
                        <div id="link-div">
                            <input placeholder="instagram link" />
                            <span class="text-danger"></span>
                        </div>
                        <div id="link-div">
                            <input asp-for="TW_Link" placeholder="twitter link" />
                            <span asp-validation-for="TW_Link" class="text-danger"></span>
                        </div>
                        <div id="link-div">
                            <input type="text" placeholder="whatsapp number" />
                        </div>

                    </div>
                </div>
                <input type="submit" id="submit" value="modify" />
            </form>
        </div>
    </div>
</section>
<script src="~/Admin/Js_files/modify_article.js"></script>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}