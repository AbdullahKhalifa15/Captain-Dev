            <div class="page" data-index="0">
                @foreach (var item in Model)
                {
                    <article class="box">
                        <div class="image">
                            <img src="@item.Image"
                             alt="article-image" />
                        </div>
                        <div class="text">
                            <a asp-action="details" asp-controller="blogs" asp-route-id="@item.Id">
                                <h3>@item.Title</h3>
                            </a>
                            <p>
                               @item.Data
                            </p>
                            <div class="info">
                                <span>author: </span>
                                <span class="input" id="input">@item.Author</span>
                            </div>
                        </div>
                    </article>
                    
                }

