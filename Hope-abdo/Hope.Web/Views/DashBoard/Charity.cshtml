@model IEnumerable<Charities>
@{
    ViewData["Title"] = "Charities";
    Layout = "dashboard";
    int num = 1;
}
@section Style{
    <link rel="stylesheet" href="~/Themes/CSS Files/dashboard_control (1).css" />
}

<section class="content">
<div class="charities">
    <div class="sec-head">
        <h2>charities</h2>
    </div>
    <div class="sec-body">
        <article class="info">
            <div class="modify">
                <h3>add a new item</h3>
                <a asp-action="Charity" asp-controller="Admin">
                    <i class="f-icon fa-solid fa-circle-plus"></i>
                </a>
            </div>
            <div class="items-num">
                <h3>number of item</h3>
                <span>@Model.Count()</span>
            </div>
        </article>
        <article class="control">
            <div class="table">
                <div class="tab-head">
                    <span>no.</span>
                    <span>name</span>
                    <span>Date</span>
                    <span>actions</span>
                </div>
                <div class="tab-body">

                    @foreach (var item in Model)
                    {
                        <!-- Start Item -->
                        <div class="item">
                                <div class="hidden">
                                    <span id="name">@item.Name</span>
                                    <span id="location">@item.Address</span>
                                    <span id="mail">@item.Email</span>
                                    <span id="phoneNumber">@item.MobileNumber</span>
                                    <span id="imgSrc">
                                        ~/Themes/Data/Images/contact-background-image.jpg
                                    </span>
                                    <span id="info">
                                        Lorem ipsum dolor sit, amet consectetur adipisicing
                                        elit. Minima optio repellendus perferendis, laboriosam
                                        rerum sunt iure vitae minus nihil voluptates, accusamus
                                        incidunt aut quo ipsa sit odit non, necessitatibus
                                        tempore.
                                    </span>
                                    <span id="facebookLink">charity facebook link1</span>
                                    <span id="instagramLink">charity instagram link1</span>
                                    <span id="twitterLink">charity twitter link1</span>
                                    <span id="mailLink">charity mail address link1</span>
                                    <span id="whatsappLink">charity whatsapp link1</span>
                                    <span id="phoneNumberLink">
                                        charity phone number link1
                                    </span>
                                    <span id="eventImages">
                                        <span>~/Themes/Data/Images/contact-background-image.jpg</span>
                                        <span>~/Themes/Data/Images/contact-background-image.jpg</span>
                                        <span>~/Themes/Data/Images/contact-background-image.jpg</span>
                                        <span>~/Themes/Data/Images/contact-background-image.jpg</span>
                                        <span>~/Themes/Data/Images/contact-background-image.jpg</span>
                                    </span>
                                </div>
                            <span>@num</span>
                            <span>@item.Name</span>
                            <span>@item.CreatedAt.ToShortDateString()</span>
                            <span>
                                <a asp-action="editcharity" asp-controller="Admin" asp-route-id="@item.Id" class="edit">
                                    <i class="f-icon fa-solid fa-pencil"></i>
                                    <!-- edit -->
                                </a>
                                <a class="seeMore">
                                    <i class="f-icon fa-solid fa-eye"></i>
                                    <!-- see more -->
                                </a>
                                    <a asp-action="deleteblog" asp-controller="admin" asp-route-id="@item.Id">
                                    <i class="f-icon fa-solid fa-trash-can"></i>
                                    <!-- remove -->
                                </a>
                            </span>
                        </div>
                        num += 1;
                        <!-- End Item -->
                    }

                </div>
            </div>
        </article>
    </div>
</div>
</section>
