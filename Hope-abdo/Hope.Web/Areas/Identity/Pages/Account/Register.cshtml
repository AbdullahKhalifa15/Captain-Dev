                                <div class="data">
                                    <div class="f-name">
                                        <label asp-for="Input.FristName">first name:</label>
                                        <div class="field">
                                            <input class="input" asp-for="Input.FristName" type="text" placeholder="First Name" />
                                            <span></span>
                                            <span class="text-danger" asp-validation-for="Input.FristName"></span>
                                            <i class="f-icon fa-solid fa-user"></i>
                                        </div>
                                    </div>
                                    <div class="l-name">
                                        <label asp-for="Input.LastName">last name:</label>
                                        <div class="field">
                                            <input class="input" asp-for="Input.LastName" type="text" placeholder="Last Name" />
                                            <span></span>
                                            <span class="text-danger" asp-validation-for="Input.LastName"></span>
                                            <i class="f-icon fa-solid fa-user"></i>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <section class="e-mail">
                                <label asp-for="Input.Email">e-mail:</label>
                                <div class="field">
                                    <input class="input" asp-for="Input.Email" type="email" />
                                    <span></span>
                                    <span class="text-danger" asp-validation-for="Input.Email"></span>
                                    <i class="f-icon fa-regular fa-envelope"></i>
                                </div>
                            </section>
                            <section class="password">
                                <label asp-for="Input.Password">password:</label>
                                <div class="field">
                                    <input class="input" asp-for="Input.Password" type="password" />
                                    <span></span>
                                    <span class="text-danger" asp-validation-for="Input.Password"></span>
                                    <i class="f-icon fa-solid fa-lock"></i>
                                </div>
                            </section>
                            <section class="password">
                                <label   asp-for="Input.ConfirmPassword">confirm password:</label>
                            <div class="field">
                                <input class="input" asp-for="Input.ConfirmPassword" type="Password" />
                                <span></span>
                                    <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
                                <i class="f-icon fa-solid fa-lock"></i>
                            </div>
                            </section>
