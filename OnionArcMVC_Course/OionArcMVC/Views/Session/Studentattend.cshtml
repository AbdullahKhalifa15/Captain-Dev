@model List<StudentAttendViewModel>
@{
    Layout = "layout-static";
    ViewData["Title"] = "Attendance";
    int num = 1;
}
<div class="container p-3 ">
    <div class="row pt-4">

        <div >
            <h2 class="text-primary " style="font-weight:bold ;font-size:40px">Student Attendance List @User.Identity.Name </h2>
        </div>
        <br />
        <br />
        <br />
    </div>
    <table class="table table-dark  " style="width:100% ">
        <thead>
            <tr>
                <th scope="col"> Num </th>
                <th scope="col"> Session Name</th>
                <th scope="col">  Date </th>
                <th class="text-end"> Is Attendant </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr class="table-info">
                    <td width="10%">
                        @num
                    </td>     
                    <td width="15%">
                        @Model[@i].NameOfSession
                    </td>
                    <td width="25%">
                        @Model[@i].Date.DayOfWeek &nbsp @Model[@i].Date
                    </td>
                    @if (@Model[@i].IsAttendent == true)
                    {
                        <td class="text-end text-success" style="font-weight:bold">
                            attended
                        </td>
                    }
                    else
                    {
                        <td class="text-end text-danger" style="font-weight:bold">
                            absent
                        </td>
                    }

                </tr>
                num++;
            }
        </tbody>
    </table>
    @* <button asp-controller="admin" asp-action="AttendenceEditing" class="btn btn-danger m-4" style="width:150px">Reset</button>*@

</div>
