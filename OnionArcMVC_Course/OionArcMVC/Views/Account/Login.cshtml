@model OnionArchitectureMVC.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Login";
}
<head>
    <title>Login</title>
    <link href="~/Themes/css/register3.css" rel="stylesheet" />
    <!-- bootstrap css file -->
    <link rel="stylesheet" href="~/Themes/Bootstrap/bootstrap.min (1).css" />
    <style>
        body {
            background-image: url('~/wwwroot/Themes/assets/img/bg10.jpeg');
        }
    </style>
</head>
<body>
    <section class="h-100 ">
        <div class="container py-5 h-100" >
            <div class="row d-flex justify-content-center  h-100">
                <div class="col">
                    <div class="card card-registration my-4">
                        <div class="row g-0">
                            <div class="col-xl-6 d-none d-xl-block center">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                     alt="Sample photo" class="img-fluid"
                                     style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                            </div>
                            <div class="col-xl-6">
                                <div class="card-body p-md-5 text-black">
                                    
                                    <h3 class="text-uppercase " style="text-align:center">Student Login Form</h3>
                                   
                                    <form method="post">
                                        

                                        <div class="form-outline mb-4">
                                            <input di type="text"  asp-for="Email" class="form-control form-control-lg" placeholder="Email Or UserName" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Password" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                            <div asp-validation-summary="ModelOnly" class="text-danger m-2"></div>
                                        </div>        
                                       
                                        <div class="d-flex justify-content-end pt-3">
                                            <button type="reset" class="btn btn-secondary btn-lg">Reset all</button>
                                            <button type="submit" class="btn btn-warning btn-lg ms-2">Login</button>
                                        </div>
                                    </form>
                                  
                                        <p  style="text-align: center; font-size:large; ">Don't have an Account ? <a asp-controller="Account" asp-action="Register"> Sign Up Now!</a></p>
                                  

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- bootstrap js file -->
    <script src="~/Themes/js/bootstrap.bundle.js"></script>
</body>
