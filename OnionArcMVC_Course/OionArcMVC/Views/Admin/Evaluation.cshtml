
@model StudentAssignment
@{
    Layout = "layout-static";
    ViewData["Title"] = "Sessions";
    int num = 1;
}
@section Style{
    <link href="~/Themes/css/evaluationcards.css" rel="stylesheet" />
}

<div style="font-size:30px;color:#601cfc;margin:30px 0;font-weight:700">
  Evaluation Of Assignment Dear @User.Identity.Name
</div>
<hr style="padding-top:10px" />
<div class="container bootstrap snippets bootdeys">
    <div class="row" style="margin:100px "  >
        <div class="col-md-6 col-sm-6 content-card">
            <div class="card-big-shadow">
                <div class="card card-just-text" data-background="color" data-color="blue" data-radius="none">
                    <div class="content">
                       
                        <h4 class="title">Evaluation</h4>
                        <p class="description" style="padding-top:20px">@Model.Evaluation</p>
                    </div>
                </div> <!-- end card -->
            </div>
        </div>

        <div class="col-md-4 col-sm-6 content-card">
            <div class="card-big-shadow">
                <div class="card card-just-text" data-background="color" data-color="green" data-radius="none">
                    <div class="content">
                        
                        <h4 class="title">Comment</h4>
                        <p class="description" style="padding-top:20px">@Model.Comments</p>
                    </div>
                </div> <!-- end card -->
            </div>
        </div>

     
    </div>
</div>