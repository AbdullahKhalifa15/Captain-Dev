@model IEnumerable<Course>
@{
    Layout = "layout-static";
    ViewData["Title"] = "Courses";
    int num = 1;

}

<div class="container p-3 ">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary " style="font-weight:bold ;font-size:40px">List Of Courses </h2>
        </div>
        <br />
        <br />
        <br />

        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="Add" class="btn btn-secondary">
                <i class="bi bi-plus"></i>&nbsp; Add new Course

            </a>
        </div>
    </div>

    <table class="table table-hover  " style="width:100% ">
        <thead>
            <tr>
                <th scope="col"> Num </th>
                <th scope="col"> Title </th>
                <th scope="col"> Appointment</th>
                <th scope="col">  Date </th>
                <th class="text-end"> Actions </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-info">
                    <td width="10%">
                        @num
                    </td>
                     <td width="20%">
                        @item.Title
                    </td>
                    <td width="15%">
                        @item.Appointment
                    </td>
                    <td width="15%">
                       @item.CreatedAt.ToShortDateString()
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-controller="course" asp-route-id="@item.Id" class="btn btn-primary opacity-90 btn-sm"><i class="bi bi-eye-fill"></i></a>
                        &nbsp;
                        <a asp-controller="Admin" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                            <i class="bi bi-pencil text-end"></i>
                        </a>
                        &nbsp;
                        <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash3 text-end"></i>
                        </a>
                    </td>
                </tr>
                num++;

            }
        </tbody>
    </table>
</div>


