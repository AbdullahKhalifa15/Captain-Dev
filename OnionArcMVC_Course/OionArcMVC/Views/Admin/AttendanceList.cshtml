@model List<AttendanceViewModel>
@{
    Layout = "layout-static";
    ViewData["Title"] = "Attendance";
    int num = 1;
}
<div class="container p-3 ">
    <div class="row pt-4">

        <div>
            <h2 class="text-primary" style="font-weight:bold">List Of Attendance Of @ViewBag.SessionName Session </h2>
        </div>
        <br />
        <br />
        <br />
    </div>
        <table class="table table-dark" style="width:100% ">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" > Num </th>
                   <th scope="col"]> FristName </th>
                  <th scope="col"> LastName</th>
                  <th scope="col">  Email </th>
                  <th scope="col">  Date </th>
                    <th class="text-end"> Is Attendant </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr class="table-info">
                        <td width="10%">
                            @num
                        </td>
                        <td width="10%">
                            @Model[@i].FirstName
                        </td>
                        <td width="10%">
                            @Model[@i].LastName
                        </td>
                        <td width="15%">
                            @Model[@i].Email
                        </td>
                       <td width="25%">
                        @Model[@i].CreatedAt.DayOfWeek &nbsp @Model[@i].CreatedAt
                       </td>
                       @if (@Model[@i].IsAttendant == true)
                       {
                        <td class="text-end text-success" style="font-weight:bold">
                            attended
                        </td>
                       }
                       else{
                        <td class="text-end text-danger" style="font-weight:bold">
                             absent
                       </td>
                       }
                      
                        
                    </tr>
                     num++;
                }
            </tbody>
        </table>
        @* <button asp-controller="admin" asp-action="AttendenceEditing" class="btn btn-danger m-4" style="width:150px">Reset</button>*@

</div>
