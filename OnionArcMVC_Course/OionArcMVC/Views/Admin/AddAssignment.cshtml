<form method="post" asp-action="AddAssignment" asp-controller="Admin">
    <div class="border p-3 mt-5">
        <div class="row pb-2">
            <h2 class="text-primary"> Add New Assignment </h2>
            <hr />
        </div>
        @*   <div asp-validation-summary="All" style="color:brown"></div>*@
        <div class="mb-3">
            <input asp-for="Question" class="form-control" placeholder="Question" />
            <span asp-validation-for="Question" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="Description" class="form-control" placeholder="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="Material" class="form-control" placeholder="Material" />
            <span asp-validation-for="Material" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="DeadLine" class="form-control" placeholder="DeadLine" />
            <span asp-validation-for="DeadLine" class="text-danger"></span>
        </div>
        <input asp-for="SessionId" type="hidden"/>
        <button type="submit" class="btn btn-success" style="width:150px">Save</button>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To Courses</a>
    </div>
</form>
