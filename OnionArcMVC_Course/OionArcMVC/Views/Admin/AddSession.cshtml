@model SessionViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "layout-static";
}


<form method="post">
    <div class="border p-3 mt-5">
        <div class="row pb-2">
            <h2 class="text-primary"> Add New Session </h2>
            <hr />
        </div>
        @*   <div asp-validation-summary="All" style="color:brown"></div>*@
        <div class="mb-3">
            <input asp-for="Description" class="form-control" placeholder="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="Date" class="form-control" placeholder="Date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="Material" class="form-control" placeholder="Material" />
            <span asp-validation-for="Material" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <select asp-for="CourseId" class=" form-control-lg form-select form-outline " asp-items="@ViewBag.CategoryList" style="font-size:large;color:dimgray ;font-weight: 500;">
                <option selected disabled>Choose Course </option>
            </select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-success" style="width:150px">Save</button>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To Courses</a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}