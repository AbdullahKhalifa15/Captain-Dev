@using DomainLayer;
@model List<StudentAssignment>
@{
    Layout = "layout-static";
    ViewData["Title"] = "Attendance";
    int num = 1;
}

<div style="font-size:30px;color:#601cfc;margin:30px 0;font-weight:700">
   Get Answers Of Assignments
</div>

<table class="table table-hover  " style="width:100% ">
    <thead>
        <tr>
            <th scope="col"> Num</th>
            <th scope="col"> Student Name </th>
            <th scope="col"> Assignment </th>
            <th class="text-end"> Actions </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-info">
                <td width="3%">
                   @num
                </td>
                <td width="10%">
                   
                    @(item.ApplicationUser.FirstName +" "+ item.ApplicationUser.LastName)
                </td>
                <td width="50%">
                    @item.Assignment.Question
                </td>      
                <td width="20%" class="text-end">
                    <a asp-action="CheckAssginment" asp-controller="Admin" asp-route-AssginmentId="@item.AssignmentId" asp-route-StudentId="@item.StudentId" asp-route-id="@item.Assignment.SessionId" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="check answer">
                        check answer
                  </a>
                    <a asp-action="Evaluation" asp-controller="admin" asp-route-AssignmentId="@item.AssignmentId" asp-route-StudentId="@item.StudentId"  class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="top" title="evaluation">
                        evaluation
                    </a>


                </td>
            </tr>
           num++;
        }
    </tbody>
</table>