
@inject SignInManager<ApplicationUser> _signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title> @ViewData["Title"]</title>
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link href="~/Themes/css/styles.css" rel="stylesheet" />
    <link href="~/Themes/css/all.min.css" rel="stylesheet" />
    @await RenderSectionAsync("Style", required: false)
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    
    <link rel="shortcut icon" type="image/x-icon" href="~/ThemesHome/assets/img/icon/browser.png">
    <link rel="stylesheet" href="~/Themes/css/card.css">
     <style>
        body {
            background-image: url('~/wwwroot/Themes/assets/img/bg10.jpeg');
        }
        footer{
            background-color: #212529;
        }
    </style>
</head>
<body >
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3"> <img src="~/ThemesHome/assets/img/logo/loder.png" />&nbsp Captine Dev</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
        </form>
        <span style="color:aliceblue ;margin:0 20px"> @User.Identity.Name</span>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-action="Viewprofile" asp-controller="Account">View profile</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" asp-action="index" asp-controller="Home">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Home
                        </a>
                        <a class="nav-link" asp-action="index" asp-controller="instructor">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                           Instractor
                        </a>
                       
                        <div class="sb-sidenav-menu-heading">Interface</div>
                        <a class="nav-link" asp-action="index" asp-controller="Course">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                           Courses
                        </a>
                        @if (User.IsInRole("User"))
                        {
                            <a class="nav-link" asp-action="Studentattend" asp-controller="session">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Attendance
                            </a>
                        }
                       
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="sb-sidenav-menu-heading">Admin</div>
                            <a class="nav-link" asp-action="Index" asp-controller="Admin">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                                Courses
                            </a>
                            <a class="nav-link" asp-action="CourseList" asp-controller="Admin">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                                Sessions
                            </a>
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePages" aria-expanded="false" aria-controls="collapsePages">
                                <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                                Students
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                                    <a class="nav-link" asp-action="StudentList" asp-controller="Admin">
                                        <div class="sb-nav-link-icon"></div>
                                        Student List
                                    </a>
                                  
                                </nav>
                            </div>
                        }
                       
                        
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    captain dev student 
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container">
                    <main role="main"">
                        @RenderBody()
                    </main>
                </div>
            </main>
            <footer class="py-4 bg-light  mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Themes/js/scripts.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


